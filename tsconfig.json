{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "removeComments": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ES6",
        "target": "ES6"
    },
    "include": [
        "src/**/*"
    ]
}
